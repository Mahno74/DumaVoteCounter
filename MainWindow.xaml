<Window x:Class="DumaVoteCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DumaVoteCounter"
        mc:Ignorable="d"
        Title="Голосование" Height="250" WindowStyle="None" MouseLeftButtonDown="Dragging" Closing="Window_Closing" Topmost="True" x:Name="mainWindow">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="2 2"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="IsTabStop" Value="False"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="2 2"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="MinHeight" Value="30" />
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="IsTabStop" Value="False"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="2" />
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="IsTabStop" Value="False"/>
        </Style>
    </Window.Resources>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
        </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBox x:Name="peopleNumberTextBox" Grid.Row="0" Grid.Column="1" Text="49" PreviewTextInput="InputOnlyDigits"/>
            <TextBox x:Name="voteForTextBox" Grid.Row="1" Grid.Column="1" IsEnabled="False"  Text="{Binding ElementName=peopleNumberTextBox, Path=Text}" />
        <TextBox x:Name="voteAgainstTextBox" Grid.Row="2" Grid.Column="1" Text="0" PreviewTextInput="InputOnlyDigits" IsTabStop="True" GotFocus="Vote_GotFocus" GotMouseCapture="Vote_GotFocus"/>
        <TextBox x:Name="voteAbstainedTextBox" Grid.Row="3" Grid.Column="1" Text="0" PreviewTextInput="InputOnlyDigits" IsTabStop="True" GotFocus="Vote_GotFocus" GotMouseCapture="Vote_GotFocus"/>
            <Label Content="Присутствует:"/>
            <Label Grid.Row="1" Content="ЗА" Background="Green" />
            <Label Grid.Row="2" Content="ПРОТИВ" Background="Red" />
            <Label Grid.Row="3" Content="ВОЗДЕРЖАЛИСЬ" Background="Yellow" />
        <Grid Grid.Row="4" Grid.ColumnSpan="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Click="SendResults_Click" x:Name="bt_SendResult" Content="ЕДИНОГЛАСНО" IsDefault="True"/>
            <Button Grid.Column="1" Content="Сброс" Click="Reset_Click" IsCancel="True" />
        </Grid>
    </Grid>
</Window>
