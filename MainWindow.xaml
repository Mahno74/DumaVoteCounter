<Window x:Class="DumaVoteCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DumaVoteCounter"
        mc:Ignorable="d"
        Title="Голосование" WindowStyle="None" MouseLeftButtonDown="Dragging" Closing="Window_Closing" Topmost="True" x:Name="mainWindow">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="2 0"/>
            <Setter Property="FontWeight" Value="Bold"/>

            <Setter Property="BorderThickness" Value="1 1 1 0"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="MinHeight" Value="10" />
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="IsTabStop" Value="False"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="BorderThickness" Value="1 0 1 1"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Margin" Value="2 0 2 8"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="IsTabStop" Value="False"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="2 2" />
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="IsTabStop" Value="False"/>
        </Style>
    </Window.Resources>
    <StackPanel x:Name="mainStackPanel">
        <Label Content="Присутствует:" Background="LightGray"/>

        <TextBox x:Name="tb_PeopleNumber" Background="LightGray" Grid.Row="1" Text="49" PreviewTextInput="InputOnlyDigits"/>

        <Label Grid.Row="2" Content="-ЗА-" Background="Green"/>
        <TextBox Grid.Row="3" Background="Green" x:Name="tb_VoteFor" IsReadOnly="True"  Text="{Binding ElementName=tb_PeopleNumber, Path=Text}" />

        <Label Grid.Row="4" Content="-ПРОТИВ-" Background="Red" />
        <TextBox x:Name="tb_VoteAgainst" Background="Red" Grid.Row="5" Text="0" PreviewTextInput="InputOnlyDigits" IsTabStop="True" GotFocus="Vote_GotFocus" />


        <Label Grid.Row="6" Content="-ВОЗДЕРЖАЛИСЬ-" Background="Yellow" />
        <TextBox x:Name="tb_voteAbstained" Background="Yellow" Grid.Row="7" Text="0" PreviewTextInput="InputOnlyDigits" IsTabStop="True" GotFocus="Vote_GotFocus" />

        <Button Grid.Row="8" Click="SendResults_Click" x:Name="bt_SendResult" Content="ЕДИНОГЛАСНО!" IsDefault="True" MinHeight="50"/>
        <Button Grid.Row="9" Content="Сброс" Click="Reset_Click" IsCancel="True" />

        <Image Grid.Row="10" x:Name="bottom_image"  Stretch="Fill" />

        <StackPanel.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Полный экран" Name="menuItemFullScreenChecked" Checked="MenuItem_FullScreen_Checked" Unchecked="MenuItem_FullScreen_Unchecked" IsCheckable="True"></MenuItem>
                <MenuItem Header="Сброс настроек" Click="MenuItem_Reset_Click"/>
                <MenuItem Header="Выход" Click="MenuItem_Exit_Click"/>
            </ContextMenu>
        </StackPanel.ContextMenu>
    </StackPanel>
</Window>
